{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node", "playwright"]
  },
  "include": [
    "tests/**/*.ts",
    "global-setup.ts",
    "global-teardown.ts",
    "fixtures/**/*.ts",
    "pages/**/*.ts",
    "utils/**/*.ts",
    "playwright.config.ts",
    "utils/helpers/testDataHelper.ts"
  ]
}
